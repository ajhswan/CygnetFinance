{
  "compilerOptions": {
    "module": "CommonJS",
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@server": ["server/ts/*"]
    },
    "outDir": "./server",
    "removeComments": true,
    "experimentalDecorators": true,
    "target": "es6",
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "importHelpers": true,
    "types": [
      "node",
      "mongoose",
      "jest",
      "validator",
      "is-empty"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "server/ts/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
